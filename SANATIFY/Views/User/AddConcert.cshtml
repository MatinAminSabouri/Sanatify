@model SANATIFY.Models.ConcertViewModel

@{
    ViewData["Title"] = "Add Concert";
}

<div class="container">
    <h2>Add New Concert</h2>
    <form asp-controller="User" asp-action="AddConcert" method="post">
        <div class="form-group">
            <label for="date">Date:</label>
            <input type="date" class="form-control" id="date" name="Date" required>
        </div>
        <div class="form-group">
            <label for="price">Price:</label>
            <input type="number" class="form-control" id="price" name="Price" required>
        </div>
        <button type="submit" class="btn btn-primary">Add Concert</button>
    </form>
</div>