@model IEnumerable<SANATIFY.Models.MusicViewModel>

@{
    ViewData["Title"] = "My Liked Songs";
}

<div class="centered-container">
    <h2>My Liked Songs</h2>
    <table class="table table-light table-bordered table-primary table-responsive table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Artist</th>
            <th>Genre</th>
            <th>Region</th>
            <th>Date</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var song in Model)
        {
            <tr>
                <td>@song.ID</td>
                <td>@song.Name</td>
                <td>@song.Person_ID</td>
                <td>@song.Genre_ID</td>
                <td>@song.Region</td>
                <td>@song.Date.ToShortDateString()</td>
            </tr>
        }
        </tbody>
    </table>
</div>