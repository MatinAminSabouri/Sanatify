@model List<SANATIFY.Models.FriendRequestViewModel>

@{
    ViewData["Title"] = "My Sent Requests";
}

<div class="centered-container">
    <h2>My Sent Friend Requests</h2>

    @if (Model.Count == 0)
    {
        <p>You haven't sent any friend requests yet.</p>
    }
    else
    {
        <table class="table table-light table-bordered table-primary table-responsive table-striped">
            <thead>
            <tr>
                <th>Request ID</th>
                <th>Receiver</th>
                <th>Status</th>
                <th>Date</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.ID</td>
                    <td>@request.ReceiverID</td>
                    <td>
                        @if (request.Status == 0)
                        {
                            <span>Rejected</span>
                        }
                        else if (request.Status == 1)
                        {
                            <span>Accepted</span>
                        }
                        else if (request.Status == 2)
                        {
                            <span>Pending</span>
                        }
                        else
                        {
                            <span>Unknown</span>
                        }
                    </td>
                    <td>@request.Date.ToString("yyyy-MM-dd")</td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>