@model IEnumerable<SANATIFY.Models.FriendRequestViewModel>

@{
    ViewData["Title"] = "My Sent Requests Status";
}

<div class="container mt-4">
    <h2>My Sent Requests</h2>
    <table class="table table-light table-bordered table-primary table-responsive table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Receiver</th>
            <th>Date Sent</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.ID</td>
                <td>@request.ReceiverName</td>
                <td>@request.Date.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (request.State == false)
                    {
                        <span class="badge badge-warning">Pending</span>
                    }
                    else if (request.Accept == true)
                    {
                        <span class="badge badge-success">Accepted</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Rejected</span>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>