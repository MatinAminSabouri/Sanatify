@{
    ViewData["Title"] = "User Dashboard";
}

<div class="custom-dashboard centered-container">
    <div class="content">
        <h2 style="color: #1a1e21">Dashboard</h2>

        <div class="btn btn-primary">
            <a href="@Url.Action("DisplayAllMusics", "Music")" class="btn btn-pink blurred-btn">All Musics</a>
        </div>
        <div class="btn btn-primary">
            <a href="@Url.Action("AllConcerts", "User")" class="btn btn-pink blurred-btn">All Concerts</a>
        </div>
        <div class="btn btn-primary">
            <a href="@Url.Action("BrowseArtists", "User")" class="btn btn-pink blurred-btn">Browse Artists</a>
        </div>
        <div>
            <button class="btn btn-primary" onclick="window.location.href='@Url.Action("MyRequests", "User")'">My Requests</button>
            <button class="btn btn-primary" onclick="window.location.href='@Url.Action("Browse", "User")'">Browse Users</button>
            <a class="btn btn-primary" href="@Url.Action("MySentRequests", "User")">My Sent Requests</a>
            <a class="btn btn-primary" href="@Url.Action("MyFriends", "User")">My Friends</a>
        </div>
    </div>
</div>