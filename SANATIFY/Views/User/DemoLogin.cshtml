@model SANATIFY.Models.LoginViewModel

@{
    ViewData["Title"] = "Demo Login";
}

<div class="centered-container">
    <div class="form-container">
        <h2>Login</h2>
        <form asp-action="DemoLogin" method="post">
            <div class="form-group">
                <label for="Username"> </label>
                <input type="text" class="form-control" id="Username" name="Username" placeholder="Username"/>
            </div>
            <div class="form-group">
                <label for="Password"> </label>
                <input type="password" class="form-control" id="Password" name="Password" placeholder="Password"/>
            </div>
            <button type="submit" class="btn btn-primary click-btn" style="padding-top: 15px; margin-top: 20px">Enter</button>
        </form>
    </div>
</div>