@model List<SANATIFY.Models.UserViewModel>

@{
    ViewData["Title"] = "My Friends";
}

<div class="custom-dashboard centered-container">
    <div class="content">
        <h2 style="color: #1a1e21">My Friends</h2>

        @if (Model.Count == 0)
        {
            <p>You don't have any friends yet.</p>
        }
        else
        {
            <ul>
                @foreach (var friend in Model)
                {
                    <li>
                        @friend.UserName - @friend.Email
                        <a href="@Url.Action("ChatRoom", "User", new { friendId = friend.ID })" class="btn btn-secondary">Chat</a>
                    </li>
                }
            </ul>
        }
    </div>
</div>
